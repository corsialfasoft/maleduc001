@{
    ViewBag.Title = "Dettaglio Prodotto";
}
<h2>@ViewBag.Title</h2>
<div class="text-warning">
    <h4>@ViewBag.Message</h4>
</div>
<div class="container">
    @using(Html.BeginForm("AddToOrder","Home",FormMethod.Post)) {
        <div>
            <strong>Codice Prodotto: </strong>
            @ViewBag.prodotto.Codice
        </div>
        <div>
            <strong>Descrizione: </strong>
            @ViewBag.prodotto.Descrizione
        </div>
        <div>
            <strong>Inserisci:</strong>
            <input type="hidden" id="codice" name="codice" value="@ViewBag.prodotto.Codice" />
            @Html.TextBox("qta",null,new { placeholder = "Quantità da ordinare" })
            <input type="submit" value="Aggiungi al carrello">
            <a class="btn btn-primary" href="/Home/RichiestaOrdini" role="button">Annulla</a>
        </div>
    }
</div>
@{
    ViewBag.Title = "Lista Prodotti";
}
<h2>@ViewBag.Title:</h2>
<div class="text-warning">
    <h4>@ViewBag.Message</h4>
</div>

<div class="container">
    <ul class="list-group">
        @foreach(var product in ViewBag.prodotti) {
            <li class="list-group-item">
                <span class="badge">
                    @Html.ActionLink("Dettaglio","Product",new { id = product.Codice })
                </span>
                @product.Codice - @product.Descrizione
            </li>
        }
    </ul>
</div>
